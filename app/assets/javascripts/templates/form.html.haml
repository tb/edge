      %input.form-control{:name => "name", "ng-model" => "recipe.name", :placeholder => "e.g. Baked Alaska", :type => "text"}/
  .form-group{"ng-class" => "{'has-warning has-feedback':errors.name}"}
    %label.col-md-2.control-label.col-md-offset-2{:for => "instructions"}
      Instructions
    .col-md-5
      %textarea.form-control{:name => "instructions", "ng-model" => "recipe.instructions", :placeholder => "e.g. FlambÃ© for 20 seconds"}
  .form-group
    .col-md-offset-2.col-md-3
      %button.btn.btn-default{"ng-click" => "cancel()"} Cancel
    .col-md-4.text-right
      %button.btn.btn-primary{"ng-click" => "save()"} Save
